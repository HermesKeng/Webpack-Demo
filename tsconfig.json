{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true
  }
}
